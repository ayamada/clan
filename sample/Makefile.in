.PHONY: help clean dep jar apk force layout clan assets res release desktop android run hiero particleeditor texturepacker2 tas test check

help:
	@echo "sorry, see clan/README.md"


test: dep
	export CLAN_TARGET=desktop CLAN_DEBUG=1 && cd desktop && $(LEIN) with-profile +repl test



check: test




