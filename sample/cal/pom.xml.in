<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http//www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>@PROJECT_CAL_GROUPID@</groupId>
  <artifactId>@PROJECT_CAL_ARTIFACTID@</artifactId>
  <version>@PROJECT_CAL_VERSION@</version>
  <packaging>jar</packaging>
  <name>@PROJECT_CAL_NAME@</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencies>
    <!-- you can append here to dependency if needed -->
    <!--
    <dependency>
      <groupId>org.clojure</groupId>
      <artifactId>clojure-contrib</artifactId>
      <version>1.2.0</version>
      <scope>provided</scope>
    </dependency>
    -->

    <!-- 以下はcalコンパイルに必要(may)だが、後でprovideされるdependecy群 -->
    <dependency>
      <!-- compile用なので、clojureは本家版を取得する -->
      <groupId>org.clojure</groupId>
      <!--
      <groupId>android</groupId>
      -->
      <artifactId>clojure</artifactId>
      <version>@CLAN_CLOJURE_VERSION@</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.badlogic.gdx</groupId>
      <artifactId>gdx</artifactId>
      <version>@CLAN_LIBGDX_VERSION@</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.google.android</groupId>
      <artifactId>android</artifactId>
      <version>@CLAN_ANDROID_VERSION@</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>neko</groupId>
      <artifactId>neko</artifactId>
      <version>@CLAN_NEKO_VERSION@</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>@CLAN_INFO_GROUPID@</groupId>
      <artifactId>@CLAN_INFO_ARTIFACTID@</artifactId>
      <version>@CLAN_INFO_VERSION@</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <!--
    <resources>
      <resource>
        <directory>src/main/clojure</directory>
      </resource>
    </resources>
    -->
    <plugins>
      <plugin>
        <groupId>com.theoryinpractise</groupId>
        <artifactId>clojure-maven-plugin</artifactId>
        <version>1.3.13</version>
        <configuration>
          <sourceDirectories>
            <sourceDirectory>src/main/clojure</sourceDirectory>
          </sourceDirectories>
          <copyAllCompiledNamespaces>true</copyAllCompiledNamespaces>
          <!--
          <script>src/main/script/run.clj</script>
          -->
          <warnOnReflection>false</warnOnReflection>
        </configuration>
        <executions>
          <execution>
            <id>compile-clojure</id>
            <phase>compile</phase>
            <goals>
              <goal>compile</goal>
            </goals>
          </execution>
          <execution>
            <id>test-clojure</id>
            <phase>test</phase>
            <goals>
              <goal>test</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.5.1</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
          <encoding>UTF-8</encoding>              
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <repositories>
    <repository>
      <id>mvnrepository</id>
      <url>http://www.mvnrepository.com/archive</url>
    </repository>
    <repository>
      <id>clojars.org</id>
      <url>http://clojars.org/repo</url>
    </repository>
  </repositories>
</project>
